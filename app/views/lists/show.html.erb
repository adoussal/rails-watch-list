<div class="banner">
  <div class="banner-content text-center">
    <h1 class="white-text"><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="text-center my-3">
    <%= link_to 'Add Movie', new_list_bookmark_path(@list), class: "btn btn-primary mb-3" %>
  </div>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Movie Title</th>
          <th>Comment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @list.bookmarks.each do |bookmark| %>
          <tr>
            <td><%= bookmark.movie.title %></td>
            <td><%= bookmark.comment %></td>
            <td>
              <%= form_with url: bookmark_path(bookmark), method: :delete, class: 'd-inline' do %>
                <%= submit_tag 'Delete', class: "btn btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
