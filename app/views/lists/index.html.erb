<div class="banner">
  <div class="banner-content text-center">
    <h1 class="white-text">All Lists</h1>
  </div>
</div>

<div class="container">
  <div class="text-center">
    <a class="btn btn-primary my-3" href="/lists/new">New List</a>
  </div>

  <h2>My Lists</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
            <p class="card-text">
              This list contains
              <%= list.movies.count == 0 ? '0 movie' : pluralize(list.movies.count, 'movie') %>.
            </p>
            <%= form_with url: list_path(list), method: :delete, local: true do |form| %>
              <%= form.submit 'Delete List', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
