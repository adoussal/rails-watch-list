<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for [@list] do |form| %>
            <div class="form-group">
              <%= form.input :name, label: false, input_html: { class: 'form-control', placeholder: 'List Name' } %>
            </div>
            <div class="form-group">
              <%= form.button :submit, 'Create List', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
